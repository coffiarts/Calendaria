<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
  {{#if festivalsWithNav.length}}
  <div class="items-list festivals-list">
    <div class="list-header flexrow">
      <span class="col-name"
        data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.FestivalName'}}">{{localize "CALENDARIA.Common.Name"}}</span>
      <span class="col-month"
        data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.FestivalMonth'}}">{{localize "CALENDARIA.Common.Month"}}</span>
      <span class="col-day"
        data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.FestivalDay'}}">{{localize "CALENDARIA.Common.Day"}}</span>
      <span class="col-leap"
        data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.LeapYearOnly'}}">{{localize "CALENDARIA.Editor.Field.LeapYearOnly"}}</span>
      <span class="col-weekday"
        data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.CountsForWeekday'}}">{{localize "CALENDARIA.Editor.Field.CountsForWeekday"}}</span>
      <span class="col-controls"></span>
    </div>

    {{#each festivalsWithNav}}
    <div class="item festival-item flexrow" data-index="{{this.index}}">
      <input type="text" name="festivals.{{this.index}}.name" value="{{this.name}}" class="col-name">

      <select name="festivals.{{this.index}}.month" class="col-month">
        {{#each this.monthOptions}}
        <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
      </select>
      <input type="number" name="festivals.{{this.index}}.day" value="{{this.day}}" min="1" class="col-day">

      <label class="col-leap checkbox">
        <input type="checkbox" name="festivals.{{this.index}}.leapYearOnly" {{#if this.leapYearOnly}}checked{{/if}}>
      </label>

      <label class="col-weekday checkbox">
        <input type="checkbox" name="festivals.{{this.index}}.countsForWeekday" {{#unless (eq
          this.countsForWeekday
          false)}}checked{{/unless}}>
      </label>

      <div class="item-controls col-controls">
        <button type="button" data-action="addFestival" data-index="{{this.index}}"
          data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.AddFestival'}}">
          <i class="fas fa-plus"></i>
        </button>
        <button type="button" data-action="removeFestival" data-index="{{this.index}}"
          data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.RemoveFestival'}}">
          <i class="fas fa-minus"></i>
        </button>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="empty-list">
    <p>{{localize "CALENDARIA.Editor.NoFestivals"}}</p>
    <button type="button" data-action="addFestival" data-index="-1">
      <i class="fas fa-plus"></i>
      {{localize "CALENDARIA.Editor.AddFestival"}}
    </button>
  </div>
  {{/if}}
</section>
