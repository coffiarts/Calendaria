<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
  {{#if erasWithNav.length}}
    <div class="items-list eras-list">
      <div class="list-header flexrow">
        <span class="col-name"
          data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.EraName'}}">{{localize "CALENDARIA.Editor.Column.Name"}}</span>
        <span class="col-abbr"
          data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.EraAbbr'}}">{{localize "CALENDARIA.Editor.Column.Abbreviation"}}</span>
        <span class="col-start-year"
          data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.EraStartYear'}}">{{localize "CALENDARIA.Editor.Column.StartYear"}}</span>
        <span class="col-end-year"
          data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.EraEndYear'}}">{{localize "CALENDARIA.Editor.Column.EndYear"}}</span>
        <span class="col-format"
          data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.EraFormat'}}">{{localize "CALENDARIA.Editor.Column.Format"}}</span>
        <span class="col-controls"></span>
      </div>

      {{#each erasWithNav}}
        <div class="item era-item flexrow" data-index="{{this.index}}">
          <input type="text" name="eras.{{this.index}}.name" value="{{this.name}}" class="col-name"
            placeholder="{{localize 'CALENDARIA.Editor.Placeholder.EraName'}}">
          <input type="text" name="eras.{{this.index}}.abbreviation" value="{{this.abbreviation}}" class="col-abbr"
            placeholder="{{localize 'CALENDARIA.Editor.Placeholder.EraAbbr'}}">
          <input type="number" name="eras.{{this.index}}.startYear" value="{{this.startYear}}" class="col-start-year"
            placeholder="1">
          <input type="number" name="eras.{{this.index}}.endYear" value="{{this.endYear}}" class="col-end-year"
            placeholder="{{localize 'CALENDARIA.Editor.Placeholder.Ongoing'}}">
          <select name="eras.{{this.index}}.format" class="col-format">
            {{#each ../formatOptions}}
              <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{localize this.label}}</option>
            {{/each}}
          </select>

          <div class="item-controls col-controls">
            <button type="button" data-action="addEra" data-index="{{this.index}}"
              data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.AddEra'}}">
              <i class="fas fa-plus"></i>
            </button>
            <button type="button" data-action="removeEra" data-index="{{this.index}}"
              data-tooltip="{{localize 'CALENDARIA.Editor.Tooltip.RemoveEra'}}">
              <i class="fas fa-minus"></i>
            </button>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="empty-list">
      <p>{{localize "CALENDARIA.Editor.NoEras"}}</p>
      <button type="button" data-action="addEra" data-index="-1">
        <i class="fas fa-plus"></i>
        {{localize "CALENDARIA.Editor.AddEra"}}
      </button>
    </div>
  {{/if}}
</section>
