          data-tooltip="{{localize 'USER.RoleAssistant'}}"
          {{#if permissions.viewMiniCalendar.assistant}}checked{{/if}} />
        <input type="checkbox" data-tooltip="{{localize 'USER.RoleGamemaster'}}" checked disabled />
        <p class="permission-hint">{{localize "CALENDARIA.Permissions.ViewMiniCalendarHint"}}</p>
      </li>

      {{!-- View TimeKeeper --}}
      <li class="permission-row">
        <span class="permission-name">{{localize "CALENDARIA.Permissions.ViewTimeKeeper"}}</span>
        <input type="checkbox" name="permissions.viewTimeKeeper.player" data-tooltip="{{localize 'USER.RolePlayer'}}"
          {{#if permissions.viewTimeKeeper.player}}checked{{/if}} />
        <input type="checkbox" name="permissions.viewTimeKeeper.trusted" data-tooltip="{{localize 'USER.RoleTrusted'}}"
