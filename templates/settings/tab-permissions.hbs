<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">

  <p class="hint">{{localize "CALENDARIA.SettingsPanel.Permissions.Note"}}</p>

  <div class="permissions-table">
    <header class="permissions-header">
      <span>{{localize "PERMISSION.Permission"}}</span>
      <span>{{localize "USER.RolePlayer"}}</span>
      <span>{{localize "USER.RoleTrusted"}}</span>
      <span>{{localize "USER.RoleAssistant"}}</span>
      <span>{{localize "USER.RoleGamemaster"}}</span>
    </header>

    <ul class="permissions-list">
      {{!-- View Full Calendar --}}
      <li class="permission-row">
        <span class="permission-name">{{localize "CALENDARIA.Permissions.ViewFullCalendar"}}</span>
        <input type="checkbox" name="permissions.viewFullCalendar.player" data-tooltip="{{localize 'USER.RolePlayer'}}"
          {{#if permissions.viewFullCalendar.player}}checked{{/if}} />
        <input type="checkbox" name="permissions.viewFullCalendar.trusted"
          data-tooltip="{{localize 'USER.RoleTrusted'}}" {{#if permissions.viewFullCalendar.trusted}}checked{{/if}} />
        <input type="checkbox" name="permissions.viewFullCalendar.assistant"
          data-tooltip="{{localize 'USER.RoleAssistant'}}"
          {{#if permissions.viewFullCalendar.assistant}}checked{{/if}} />
        <input type="checkbox" data-tooltip="{{localize 'USER.RoleGamemaster'}}" checked disabled />
        <p class="permission-hint">{{localize "CALENDARIA.Permissions.ViewFullCalendarHint"}}</p>
      </li>

      {{!-- View MiniCalendar --}}
      <li class="permission-row">
        <span class="permission-name">{{localize "CALENDARIA.Permissions.ViewMiniCalendar"}}</span>
